@model List<CoreAndFood.Data.Models.Food>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Foot List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Foot Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FoodID</td>
            <td>@x.Name</td>
            <td>@x.Price</td>
            <td>@x.Stock</td>
            <td>@x.Category.CategoryName</td><!-- <th> yerine <td> kullanıldı -->
            
            <td>
                <a href="/Food/FoodDelete/@x.FoodID" class="btn btn-danger">Delete</a>
            </td>
            <td>
                <a href="/Food/FoodGet/@x.FoodID" class="btn btn-success">Update</a>
            </td>
            <td>
                <a href="#" class="btn btn-info">Details</a>
            </td>
        </tr>
    }
</table>
<a href="/Food/FoodAdd/" clas="btn btn-info">New Food</a>


