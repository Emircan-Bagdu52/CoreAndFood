@model CoreAndFood.Data.Models.Food
@{
    ViewData["Title"] = "FoodAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food Add Pages</h2>
<br />
@using (Html.BeginForm("FoodAdd", "Food", FormMethod.Post))
{
    <b>Food Name</b>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <b>Stock</b>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <b>Price</b>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    <b>Image URL</b>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <b>Category</b>
    @Html.DropDownListFor(x => x.CategoryID,(List<SelectListItem>)ViewBag.v1 ,new { @class = "form-control" })
    <br />
    <b>Description</b>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Save</button>
}

